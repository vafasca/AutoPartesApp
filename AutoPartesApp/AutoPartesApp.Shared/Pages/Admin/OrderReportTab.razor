@namespace AutoPartesApp.Shared.Pages.Admin

@if (OrderReport == null)
{
    <div class="text-center py-10 text-slate-500 dark:text-slate-400">
        <span class="material-symbols-outlined text-4xl mb-2">info</span>
        <p>No hay datos de órdenes disponibles</p>
    </div>
}
else
{
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <div class="bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 rounded-xl p-5 shadow-sm border border-slate-200 dark:border-transparent">
            <div class="flex items-center justify-between mb-2">
                <p class="text-slate-500 dark:text-slate-300 text-xs font-bold uppercase">Total Órdenes</p>
                <span class="material-symbols-outlined text-primary text-xl">shopping_cart</span>
            </div>
            <p class="text-3xl font-bold">@OrderReport.TotalOrders</p>
        </div>

        <div class="bg-gradient-to-br from-orange-500/10 to-orange-500/5 dark:from-orange-500/20 dark:to-orange-500/10 rounded-xl p-5 shadow-sm border border-slate-200 dark:border-transparent">
            <div class="flex items-center justify-between mb-2">
                <p class="text-slate-500 dark:text-slate-300 text-xs font-bold uppercase">Pendientes</p>
                <span class="material-symbols-outlined text-orange-500 text-xl">pending</span>
            </div>
            <p class="text-3xl font-bold">@OrderReport.PendingOrders</p>
        </div>

        <div class="bg-gradient-to-br from-blue-500/10 to-blue-500/5 dark:from-blue-500/20 dark:to-blue-500/10 rounded-xl p-5 shadow-sm border border-slate-200 dark:border-transparent">
            <div class="flex items-center justify-between mb-2">
                <p class="text-slate-500 dark:text-slate-300 text-xs font-bold uppercase">Tiempo Procesamiento</p>
                <span class="material-symbols-outlined text-blue-500 text-xl">timer</span>
            </div>
            <p class="text-2xl font-bold">@FormatTimeSpan(OrderReport.AverageProcessingTime)</p>
        </div>

        <div class="bg-gradient-to-br from-red-500/10 to-red-500/5 dark:from-red-500/20 dark:to-red-500/10 rounded-xl p-5 shadow-sm border border-slate-200 dark:border-transparent">
            <div class="flex items-center justify-between mb-2">
                <p class="text-slate-500 dark:text-slate-300 text-xs font-bold uppercase">Tasa Cancelación</p>
                <span class="material-symbols-outlined text-red-500 text-xl">cancel</span>
            </div>
            <p class="text-3xl font-bold">@OrderReport.CancellationRate.ToString("F1")%</p>
        </div>
    </div>

    <!-- Orders by Status - Pie Chart -->
    <div class="bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-transparent mb-6">
        <h3 class="text-lg font-bold mb-4 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary">pie_chart</span>
            Órdenes por Estado
        </h3>

        @if (OrderReport.OrdersByStatus != null && OrderReport.OrdersByStatus.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Visual Pie Chart -->
                <div class="flex items-center justify-center">
                    <div class="relative size-48">
                        @{
                            var colors = new[] { "bg-primary", "bg-green-500", "bg-orange-500", "bg-blue-500", "bg-red-500", "bg-purple-500", "bg-yellow-500" };
                            var totalOrders = OrderReport.OrdersByStatus.Sum(x => x.Count);
                            var startAngle = 0.0;
                        }

                        @foreach (var (status, index) in OrderReport.OrdersByStatus.Select((s, i) => (s, i)))
                        {
                            var percentage = totalOrders > 0 ? (status.Count / (double)totalOrders) * 100 : 0;
                            var angle = (percentage / 100) * 360;
                            var color = colors[index % colors.Length];

                            <div class="absolute inset-0 rounded-full border-[20px] @color transition-all duration-300"
                                 style="clip-path: polygon(50% 50%, 50% 0%, @GetPiePoint(startAngle), @GetPiePoint(startAngle + angle));">
                            </div>

                            startAngle += angle;
                        }

                        <div class="absolute inset-8 bg-white dark:bg-slate-900 rounded-full flex items-center justify-center">
                            <span class="text-2xl font-bold">@totalOrders</span>
                        </div>
                    </div>
                </div>

                <!-- Legend -->
                <div class="space-y-3">
                    @foreach (var (status, index) in OrderReport.OrdersByStatus.Select((s, i) => (s, i)))
                    {
                        var percentage = OrderReport.TotalOrders > 0 ? (status.Count / (decimal)OrderReport.TotalOrders) * 100 : 0;
                        var color = colors[index % colors.Length].Replace("bg-", "");

                        <div class="flex items-center justify-between p-3 bg-slate-50 dark:bg-slate-800/50 rounded-lg">
                            <div class="flex items-center gap-3">
                                <div class="size-4 rounded-full bg-@color"></div>
                                <div>
                                    <p class="font-bold text-sm">@GetStatusName(status.Status)</p>
                                    <p class="text-xs text-slate-500 dark:text-slate-400">@status.Count órdenes</p>
                                </div>
                            </div>
                            <span class="font-bold text-primary">@percentage.ToString("F1")%</span>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <p class="text-slate-500 dark:text-slate-400 text-center py-8">No hay datos de estados disponibles</p>
        }
    </div>

    <!-- Pending Orders Table -->
    @if (OrderReport.PendingOrdersList != null && OrderReport.PendingOrdersList.Any())
    {
        <div class="bg-gradient-to-br from-orange-500/10 to-orange-500/5 dark:from-orange-500/20 dark:to-orange-500/10 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-transparent">
            <h3 class="text-lg font-bold mb-4 flex items-center gap-2">
                <span class="material-symbols-outlined text-orange-500">pending_actions</span>
                Órdenes Pendientes
            </h3>

            <div class="space-y-2">
                @foreach (var order in OrderReport.PendingOrdersList.Take(5))
                {
                    <div class="flex items-center justify-between p-3 bg-slate-50 dark:bg-slate-800/50 rounded-lg">
                        <div>
                            <p class="font-bold text-sm">#@order.OrderNumber</p>
                            <p class="text-xs text-slate-500 dark:text-slate-400">@order.CustomerName</p>
                        </div>
                        <div class="text-right">
                            <p class="font-bold text-sm text-primary">@order.Total.ToString("C")</p>
                            <p class="text-xs text-slate-500 dark:text-slate-400">@GetTimeAgo(order.CreatedAt)</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}

@code {
    [Parameter]
    public AutoPartesApp.Core.Application.DTOs.ReportDTOs.OrderReportDto? OrderReport { get; set; }

    private string FormatTimeSpan(TimeSpan timeSpan)
    {
        if (timeSpan.TotalHours >= 1)
            return $"{timeSpan.TotalHours:F1}h";
        else
            return $"{timeSpan.TotalMinutes:F0}min";
    }

    private string GetStatusName(AutoPartesApp.Domain.Enums.OrderStatus status)
    {
        return status switch
        {
            AutoPartesApp.Domain.Enums.OrderStatus.Pending => "Pendiente",
            AutoPartesApp.Domain.Enums.OrderStatus.Confirmed => "Confirmado",
            AutoPartesApp.Domain.Enums.OrderStatus.Processing => "En Preparación",
            AutoPartesApp.Domain.Enums.OrderStatus.Shipped => "Enviado",
            AutoPartesApp.Domain.Enums.OrderStatus.OnRoute => "En Camino",
            AutoPartesApp.Domain.Enums.OrderStatus.Delivered => "Entregado",
            AutoPartesApp.Domain.Enums.OrderStatus.Cancelled => "Cancelado",
            _ => "Desconocido"
        };
    }

    private string GetTimeAgo(DateTime date)
    {
        var diff = DateTime.UtcNow - date;
        if (diff.TotalMinutes < 60)
            return $"Hace {diff.TotalMinutes:F0}m";
        else if (diff.TotalHours < 24)
            return $"Hace {diff.TotalHours:F0}h";
        else
            return $"Hace {diff.TotalDays:F0}d";
    }

    private string GetPiePoint(double angle)
    {
        var radians = (angle - 90) * Math.PI / 180;
        var x = 50 + 50 * Math.Cos(radians);
        var y = 50 + 50 * Math.Sin(radians);
        return $"{x:F2}% {y:F2}%";
    }
}
