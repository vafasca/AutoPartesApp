@page "/delivery/dashboard"
@layout DeliveryLayout
@namespace AutoPartesApp.Shared.Pages.Delivery

<!-- Top Navigation Bar - Responsive -->
<div class="sticky top-0 z-50 bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-800">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-center p-4 pb-2 justify-between">
            <div class="flex items-center gap-3">
                <div class="text-primary flex size-10 shrink-0 items-center justify-center bg-primary/10 rounded-full">
                    <span class="material-symbols-outlined">account_circle</span>
                </div>
                <h2 class="text-slate-900 dark:text-white text-lg font-bold leading-tight tracking-tight">
                    Hola, @driverName
                </h2>
            </div>
            <div class="flex w-12 items-center justify-end">
                <button class="relative flex size-10 cursor-pointer items-center justify-center rounded-full bg-slate-200 dark:bg-slate-800 text-slate-900 dark:text-white hover:bg-slate-300 dark:hover:bg-slate-700 transition-colors"
                        @onclick="ToggleNotifications">
                    <span class="material-symbols-outlined">notifications</span>
                    @if (hasNotifications)
                    {
                        <span class="absolute top-2 right-2 flex h-2 w-2 rounded-full bg-red-500"></span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>

<main class="max-w-7xl mx-auto">
    <!-- Summary Stats Section - Responsive -->
    <div class="px-4 pt-4">
        <p class="text-sm font-bold uppercase tracking-wider text-slate-500 dark:text-slate-400 mb-3">
            Resumen del Día
        </p>
        <div class="grid grid-cols-3 lg:grid-cols-6 gap-3">
            @foreach (var stat in dailyStats)
            {
                <div class="flex flex-col gap-1 rounded-xl p-4 bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 border border-slate-200 dark:border-slate-800 hover:shadow-md transition-shadow">
                    <p class="@stat.ColorClass text-xs font-medium leading-normal truncate">@stat.Label</p>
                    <p class="text-slate-900 dark:text-white text-2xl font-extrabold leading-tight">@stat.Value</p>
                </div>
            }
        </div>
    </div>

    <!-- Section Header -->
    <div class="flex items-center justify-between px-4 pt-6 pb-2">
        <h2 class="text-slate-900 dark:text-white text-lg lg:text-xl font-extrabold leading-tight tracking-tight">
            Pedidos Asignados
        </h2>
        <button class="text-primary text-sm font-bold hover:underline"
                @onclick="ViewAllOrders">
            Ver todos
        </button>
    </div>

    <!-- Active Delivery Card (Primary Action) - Responsive -->
    @if (nextDelivery != null)
    {
        <div class="p-4">
            <div class="flex flex-col lg:flex-row items-stretch justify-start rounded-xl shadow-lg bg-white dark:bg-slate-900/50 border border-slate-200 dark:border-slate-800 overflow-hidden hover:shadow-xl transition-shadow">
                <!-- Map Preview -->
                <div class="w-full lg:w-1/3 bg-center bg-no-repeat aspect-[16/6] lg:aspect-square bg-cover"
                     style='background-image: url("@nextDelivery.MapImageUrl");'></div>

                <!-- Delivery Info -->
                <div class="flex w-full grow flex-col items-stretch justify-center gap-2 p-4 lg:p-6">
                    <div class="flex justify-between items-start mb-2">
                        <p class="text-slate-900 dark:text-white text-lg lg:text-xl font-bold leading-tight tracking-tight">
                            Pedido @nextDelivery.OrderNumber
                        </p>
                        <span class="bg-primary/20 text-primary text-[10px] font-bold px-2 py-0.5 rounded-full uppercase shrink-0">
                            Siguiente
                        </span>
                    </div>
                    <div class="flex flex-col lg:flex-row items-start lg:items-end gap-3 justify-between">
                        <div class="flex flex-col gap-1 flex-1">
                            <p class="text-slate-600 dark:text-slate-400 text-sm font-medium leading-normal flex items-center gap-1">
                                <span class="material-symbols-outlined text-sm">person</span>
                                @nextDelivery.CustomerName
                            </p>
                            <p class="text-slate-500 dark:text-slate-400 text-xs font-normal leading-normal flex items-center gap-1">
                                <span class="material-symbols-outlined text-sm">location_on</span>
                                @nextDelivery.Address
                            </p>
                        </div>
                        <button class="w-full lg:w-auto min-w-[140px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 lg:h-11 px-4 lg:px-6 bg-primary text-white text-sm font-bold leading-normal shadow-md hover:bg-primary/90 active:scale-95 transition-all flex gap-2"
                                @onclick="() => StartDelivery(nextDelivery.Id)">
                            <span class="material-symbols-outlined text-lg">play_circle</span>
                            <span class="truncate">Iniciar Entrega</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Secondary Delivery Cards (Pending) - Responsive Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-4 px-4 pb-6">
        @foreach (var delivery in pendingDeliveries)
        {
            <div class="flex flex-row lg:flex-col items-stretch justify-between gap-4 rounded-xl bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 p-4 shadow-sm border border-slate-200 dark:border-slate-800 hover:shadow-md transition-shadow cursor-pointer"
                 @onclick="() => ViewDeliveryDetails(delivery.Id)">

                <!-- Content -->
                <div class="flex flex-col justify-between gap-3 flex-1">
                    <div class="flex flex-col gap-1">
                        <div class="flex items-center gap-2">
                            <p class="text-slate-900 dark:text-white text-base font-bold leading-tight">
                                Pedido @delivery.OrderNumber
                            </p>
                        </div>
                        <p class="text-slate-600 dark:text-slate-400 text-sm font-medium leading-normal">
                            @delivery.CustomerName
                        </p>
                        <p class="text-slate-500 dark:text-slate-400 text-xs font-normal leading-tight">
                            @delivery.Address
                        </p>
                    </div>
                    <button class="flex min-w-[84px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-9 px-4 bg-slate-100 dark:bg-slate-800 text-slate-900 dark:text-white gap-2 text-xs font-bold leading-normal w-fit border border-slate-200 dark:border-slate-700 hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors"
                            @onclick:stopPropagation="true"
                            @onclick="() => MarkAsDelivered(delivery.Id)">
                        <span class="material-symbols-outlined text-[18px]">@GetDeliveryActionIcon(delivery.Status)</span>
                        <span class="truncate">@GetDeliveryActionText(delivery.Status)</span>
                    </button>
                </div>

                <!-- Image -->
                <div class="w-32 lg:w-full bg-center bg-no-repeat aspect-square bg-cover rounded-lg flex-none"
                     style='background-image: url("@delivery.ImageUrl");'></div>
            </div>
        }
    </div>
</main>