@page "/client/tracking"
@page "/client/tracking/{orderId}"
@layout ClientLayout
@namespace AutoPartesApp.Shared.Pages.Client

<header class="sticky top-0 z-50 flex items-center bg-background-light/95 dark:bg-background-dark/95 p-4 pb-2 justify-between border-b border-slate-200 dark:border-slate-800 backdrop-blur-md">
    <button class="text-slate-900 dark:text-white flex size-10 shrink-0 items-center justify-center rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 cursor-pointer"
            @onclick="GoBack">
        <span class="material-symbols-outlined">arrow_back_ios</span>
    </button>

    <h2 class="text-slate-900 dark:text-white text-lg lg:text-2xl font-bold leading-tight tracking-[-0.015em] flex-1 text-center lg:text-left px-4">
        Rastreo de Pedido
    </h2>

    <div class="flex items-center gap-2">
        <button class="text-slate-900 dark:text-white flex size-10 items-center justify-center rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 cursor-pointer relative"
                @onclick="ToggleNotifications">
            <span class="material-symbols-outlined">notifications</span>
            @if (hasNewNotifications)
            {
                <span class="absolute top-2 right-2 flex h-2 w-2 rounded-full bg-red-500"></span>
            }
        </button>
        <button class="text-slate-900 dark:text-white flex size-10 items-center justify-center rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 cursor-pointer relative"
                @onclick="GoToCart">
            <span class="material-symbols-outlined">shopping_cart</span>
            @if (cartItemsCount > 0)
            {
                <span class="absolute -top-1 -right-1 flex h-4 w-4 items-center justify-center rounded-full bg-primary text-[10px] font-bold text-white">@cartItemsCount</span>
            }
        </button>
    </div>
</header>

<main class="flex-1 overflow-y-auto pb-24 lg:pb-8">
    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-0 lg:gap-6 lg:p-6">

            <!-- Mapa y Info Card -->
            <div class="lg:col-span-2">
                <!-- Mapa -->
                <div class="relative w-full aspect-[4/3] lg:aspect-video lg:rounded-2xl overflow-hidden shadow-lg">
                    <div class="w-full h-full bg-center bg-no-repeat bg-cover"
                         style='background-image: url("@currentOrder.MapImageUrl");'>
                    </div>

                    <!-- Botón ubicación -->
                    <button class="absolute bottom-4 right-4 bg-slate-900/80 dark:bg-slate-900/90 backdrop-blur-md p-3 rounded-xl border border-white/10 hover:bg-slate-900 transition-colors shadow-lg"
                            @onclick="RefreshLocation">
                        <span class="material-symbols-outlined text-primary text-2xl lg:text-3xl">location_searching</span>
                    </button>

                    <!-- Badge móvil -->
                    <div class="lg:hidden absolute top-4 left-4 bg-slate-900/80 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/10">
                        <div class="flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary text-sm">local_shipping</span>
                            <span class="text-white text-xs font-bold">@currentOrder.Status</span>
                        </div>
                    </div>
                </div>

                <!-- Info Card - FONDO OSCURO CORREGIDO -->
                <div class="px-4 -mt-6 relative z-10 lg:mt-4 lg:px-0">
                    <div class="flex flex-col items-stretch justify-start rounded-xl lg:rounded-2xl shadow-2xl bg-slate-800 dark:bg-slate-800 border border-slate-700 dark:border-slate-700 overflow-hidden">
                        <div class="flex w-full grow flex-col items-stretch justify-center gap-4 p-5 lg:p-6">
                            <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4">
                                <div>
                                    <p class="text-slate-600 dark:text-slate-400 text-xs font-bold leading-normal uppercase tracking-wider">
                                        Estado Actual
                                    </p>
                                    <div class="flex items-center gap-2 mt-1">
                                        <span class="material-symbols-outlined text-primary text-xl lg:text-2xl">local_shipping</span>
                                        <p class="text-slate-900 dark:text-white text-xl lg:text-2xl font-bold leading-tight tracking-[-0.015em]">
                                            @currentOrder.Status
                                        </p>
                                    </div>
                                </div>
                                <div class="text-left lg:text-right">
                                    <p class="text-slate-600 dark:text-slate-400 text-xs font-normal leading-normal">
                                        Llegada estimada
                                    </p>
                                    <p class="text-primary text-lg lg:text-xl font-bold leading-tight">
                                        @currentOrder.EstimatedArrival
                                    </p>
                                </div>
                            </div>

                            <!-- Info del pedido -->
                            <div class="flex flex-col gap-2 p-4 bg-slate-50 dark:bg-slate-900/50 rounded-lg">
                                <div class="flex justify-between items-center">
                                    <span class="text-slate-700 dark:text-slate-300 text-sm font-medium">Número de pedido:</span>
                                    <span class="text-slate-900 dark:text-white font-bold text-sm">#@currentOrder.OrderNumber</span>
                                </div>
                                <div class="flex justify-between items-center">
                                    <span class="text-slate-700 dark:text-slate-300 text-sm font-medium">Repartidor:</span>
                                    <span class="text-slate-900 dark:text-white font-bold text-sm">@currentOrder.DriverName</span>
                                </div>
                                @if (!string.IsNullOrEmpty(currentOrder.VehicleInfo))
                                {
                                    <div class="flex justify-between items-center">
                                        <span class="text-slate-700 dark:text-slate-300 text-sm font-medium">Vehículo:</span>
                                        <span class="text-slate-900 dark:text-white font-bold text-sm">@currentOrder.VehicleInfo</span>
                                    </div>
                                }
                            </div>

                            <!-- Botones de contacto -->
                            <div class="flex gap-3">
                                <button class="flex-1 flex cursor-pointer items-center justify-center gap-2 overflow-hidden rounded-lg h-12 px-4 bg-primary text-white text-sm font-bold leading-normal transition-all hover:bg-primary/90 active:scale-95 shadow-md"
                                        @onclick="ContactDriver">
                                    <span class="material-symbols-outlined text-base">chat</span>
                                    <span class="truncate">Contactar Repartidor</span>
                                </button>
                                <button class="flex size-12 shrink-0 cursor-pointer items-center justify-center rounded-lg bg-slate-100 dark:bg-slate-700 text-slate-900 dark:text-white hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors"
                                        @onclick="CallDriver">
                                    <span class="material-symbols-outlined">call</span>
                                </button>
                            </div>

                            <!-- Compartir (desktop) -->
                            <button class="hidden lg:flex items-center justify-center gap-2 h-10 px-4 rounded-lg border border-slate-300 dark:border-slate-700 text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors text-sm font-medium"
                                    @onclick="ShareLocation">
                                <span class="material-symbols-outlined text-base">share</span>
                                Compartir ubicación
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Timeline -->
            <div class="lg:col-span-1 mt-6 lg:mt-0">
                <div class="px-4 lg:px-0">
                    <h3 class="text-slate-900 dark:text-white text-lg font-bold leading-tight tracking-[-0.015em] pb-4 pt-4 lg:pt-0">
                        Progreso del Envío
                    </h3>

                    <div class="bg-slate-800 dark:bg-slate-800 rounded-xl lg:rounded-2xl p-4 lg:p-6 border border-slate-700 dark:border-slate-700 shadow-sm">
                        <div class="grid grid-cols-[48px_1fr] gap-x-2">
                            @foreach (var step in trackingSteps)
                            {
                                <div class="flex flex-col items-center">
                                    <div class="flex h-10 w-10 items-center justify-center rounded-full @GetStepCircleClass(step)">
                                        <span class="material-symbols-outlined @GetStepIconSize(step) @GetStepIconColor(step)">@step.Icon</span>
                                    </div>
                                    @if (!step.IsLast)
                                    {
                                        <div class="w-[2px] @GetStepLineClass(step) h-12"></div>
                                    }
                                </div>
                                <div class="flex flex-col @(step.IsLast ? "" : "pb-8")">
                                    <p class="@GetStepTitleClass(step) text-base font-bold leading-none">@step.Title</p>
                                    <p class="@GetStepTimeClass(step) text-sm mt-1">@step.Time</p>
                                    @if (!string.IsNullOrEmpty(step.Description))
                                    {
                                        <p class="text-slate-600 dark:text-slate-400 text-xs mt-2">@step.Description</p>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Info adicional (desktop) -->
                    <div class="hidden lg:block mt-4 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-xl border border-blue-200 dark:border-blue-800">
                        <div class="flex items-start gap-3">
                            <span class="material-symbols-outlined text-primary text-xl">info</span>
                            <div class="flex-1">
                                <p class="text-slate-900 dark:text-white text-sm font-bold mb-1">Información importante</p>
                                <p class="text-slate-700 dark:text-slate-300 text-xs">
                                    El repartidor te contactará antes de llegar. Asegúrate de tener tu teléfono cerca.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>