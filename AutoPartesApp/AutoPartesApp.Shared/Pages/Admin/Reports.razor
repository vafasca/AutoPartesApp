@page "/admin/reports"
@layout AdminLayout
@namespace AutoPartesApp.Shared.Pages.Admin

<!-- TopAppBar - Responsive -->
<header class="sticky top-0 z-50 bg-background-light dark:bg-background-dark border-b border-slate-200 dark:border-slate-800">
    <div class="max-w-7xl mx-auto">
        <div class="flex items-center p-4 justify-between">
            <div class="flex size-12 shrink-0 items-center justify-start">
                <span class="material-symbols-outlined text-2xl lg:text-3xl text-primary">analytics</span>
            </div>
            <h1 class="text-lg lg:text-2xl font-bold leading-tight tracking-tight flex-1 text-center lg:text-left px-4">
                Reportes Avanzados
            </h1>
            <div class="flex w-12 items-center justify-end">
                <button class="flex size-10 cursor-pointer items-center justify-center rounded-lg bg-transparent hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                        @onclick="ToggleNotifications">
                    <span class="material-symbols-outlined text-2xl text-slate-900 dark:text-white">notifications</span>
                </button>
            </div>
        </div>
    </div>
</header>

<main class="pb-24 lg:pb-8">
    <div class="max-w-7xl mx-auto p-4 space-y-6">

        @if (viewModel.IsLoading)
        {
            <!-- Loading State -->
            <div class="flex items-center justify-center py-20">
                <div class="text-center space-y-4">
                    <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-primary mx-auto"></div>
                    <p class="text-slate-600 dark:text-slate-400">Cargando reportes...</p>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(viewModel.ErrorMessage))
        {
            <!-- Error State -->
            <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-6">
                <div class="flex items-start gap-3">
                    <span class="material-symbols-outlined text-red-500 text-2xl">error</span>
                    <div>
                        <h3 class="font-bold text-red-900 dark:text-red-200 mb-1">Error al cargar reportes</h3>
                        <p class="text-red-700 dark:text-red-300 text-sm">@viewModel.ErrorMessage</p>
                        <button class="mt-3 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm font-medium"
                                @onclick="RetryLoadData">
                            Reintentar
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Date Picker Section - Responsive -->
            <section class="bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 rounded-xl p-4 lg:p-6 shadow-sm border border-slate-200 dark:border-slate-800">
                <div class="flex flex-col lg:flex-row lg:items-center justify-between mb-4 gap-4">
                    <div>
                        <h3 class="text-sm font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Período</h3>
                        <span class="text-primary text-base lg:text-lg font-bold">@selectedPeriodText</span>
                    </div>
                    <div class="flex gap-2">
                        <button class="px-4 py-2 rounded-lg @GetPeriodButtonClass("week")" @onclick='() => ChangePeriod("week")'>
                            Semana
                        </button>
                        <button class="px-4 py-2 rounded-lg @GetPeriodButtonClass("month")" @onclick='() => ChangePeriod("month")'>
                            Mes
                        </button>
                        <button class="px-4 py-2 rounded-lg @GetPeriodButtonClass("custom")" @onclick='() => ChangePeriod("custom")'>
                            Personalizado
                        </button>
                    </div>
                </div>

                @if (selectedPeriod == "custom")
                {
                    <!-- Calendar View - Responsive -->
                    <div class="flex flex-col gap-2">
                        <div class="flex items-center p-2 justify-between">
                            <button class="p-2 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors"
                                    @onclick="PreviousMonth">
                                <span class="material-symbols-outlined text-lg">chevron_left</span>
                            </button>
                            <p class="text-base lg:text-lg font-bold flex-1 text-center">@currentMonthYear</p>
                            <button class="p-2 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors"
                                    @onclick="NextMonth">
                                <span class="material-symbols-outlined text-lg">chevron_right</span>
                            </button>
                        </div>

                        <!-- Calendar Grid -->
                        <div class="grid grid-cols-7 text-center gap-1">
                            @foreach (var day in daysOfWeek)
                            {
                                <p class="text-[11px] font-bold py-2 opacity-50 uppercase">@day</p>
                            }

                            @for (int i = 0; i < calendarDays.Count; i++)
                            {
                                var day = calendarDays[i];
                                <button class="@GetCalendarDayClass(day, i)"
                                        @onclick="() => SelectCalendarDay(day, i)">
                                    @day.DayNumber
                                </button>
                            }
                        </div>
                    </div>
                }
            </section>

            <!-- Tabs Navigation -->
            <div class="flex overflow-x-auto gap-2 pb-2 border-b border-slate-200 dark:border-slate-700">
                <button class="@GetTabClass("sales")" @onclick='() => ChangeTab("sales")'>
                    <span class="material-symbols-outlined text-lg">trending_up</span>
                    Ventas
                </button>
                <button class="@GetTabClass("inventory")" @onclick='() => ChangeTab("inventory")'>
                    <span class="material-symbols-outlined text-lg">inventory_2</span>
                    Inventario
                </button>
                <button class="@GetTabClass("customers")" @onclick='() => ChangeTab("customers")'>
                    <span class="material-symbols-outlined text-lg">people</span>
                    Clientes
                </button>
                <button class="@GetTabClass("deliveries")" @onclick='() => ChangeTab("deliveries")'>
                    <span class="material-symbols-outlined text-lg">local_shipping</span>
                    Entregas
                </button>
                <button class="@GetTabClass("orders")" @onclick='() => ChangeTab("orders")'>
                    <span class="material-symbols-outlined text-lg">shopping_cart</span>
                    Órdenes
                </button>
                <button class="@GetTabClass("financial")" @onclick='() => ChangeTab("financial")'>
                    <span class="material-symbols-outlined text-lg">attach_money</span>
                    Financiero
                </button>
            </div>

            <!-- Tab Content -->
            @switch (activeTab)
            {
                case "sales":
                    <SalesReportTab SalesReport="viewModel.SalesReport" />
                    break;
                case "inventory":
                    <InventoryReportTab InventoryReport="viewModel.InventoryReport" />
                    break;
                case "customers":
                    <CustomerReportTab CustomerReport="viewModel.CustomerReport" />
                    break;
                case "deliveries":
                    <DeliveryReportTab DeliveryReport="viewModel.DeliveryReport" />
                    break;
                case "orders":
                    <OrderReportTab OrderReport="viewModel.OrderReport" />
                    break;
                case "financial":
                    <FinancialReportTab FinancialReport="viewModel.FinancialReport" />
                    break;
            }

            <!-- Export Buttons - Responsive -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 py-4">
                <button class="flex items-center justify-center gap-2 h-12 bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 rounded-xl border border-slate-200 dark:border-transparent text-sm font-bold transition-all active:scale-95 shadow-sm hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed"
                        @onclick="ExportPDF"
                        disabled="@(viewModel.IsLoading)">
                    <span class="material-symbols-outlined text-red-500">picture_as_pdf</span>
                    Exportar PDF
                </button>
                <button class="flex items-center justify-center gap-2 h-12 bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 rounded-xl border border-slate-200 dark:border-transparent text-sm font-bold transition-all active:scale-95 shadow-sm hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed"
                        @onclick="ExportExcel"
                        disabled="@(viewModel.IsLoading)">
                    <span class="material-symbols-outlined text-green-500">description</span>
                    Exportar Excel
                </button>
            </div>
        }
    </div>
</main>
