@page "/admin/dashboard"
@layout AdminLayout
@namespace AutoPartesApp.Shared.Pages.Admin

<!-- Top App Bar - Responsivo -->
<header class="sticky top-0 z-50 bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-md border-b border-slate-200 dark:border-slate-800">
    <div class="flex items-center p-3 sm:p-4 lg:p-5 justify-between w-full max-w-7xl mx-auto">
        <div class="flex items-center gap-2 sm:gap-3 min-w-0">
            <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-full size-9 sm:size-10 lg:size-12 border-2 border-primary flex-shrink-0"
                 style='background-image: url("@adminProfile.AvatarUrl");'></div>
            <div class="min-w-0">
                <p class="text-[10px] sm:text-xs text-slate-500 dark:text-slate-400 font-medium">Hola, Admin</p>
                <h2 class="text-slate-900 dark:text-white text-sm sm:text-base lg:text-lg font-bold leading-tight truncate">
                    Dashboard Principal
                </h2>
            </div>
        </div>
        <div class="flex items-center gap-1 sm:gap-2">
            <button class="relative p-1.5 sm:p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
                    @onclick="ToggleNotifications">
                <span class="material-symbols-outlined text-slate-600 dark:text-slate-300 text-xl sm:text-2xl">notifications</span>
                @if (hasNotifications)
                {
                    <span class="absolute top-1 right-1 sm:top-2 sm:right-2 flex h-2 w-2 rounded-full bg-red-500 border border-background-dark"></span>
                }
            </button>
        </div>
    </div>
</header>

<main class="w-full mx-auto px-3 sm:px-4 lg:px-6 xl:px-8 py-4 sm:py-6 lg:py-8 max-w-7xl">

    <!-- KPI Metrics - Grid Responsivo -->
    <section class="mb-6 sm:mb-8">
        <h3 class="text-slate-900 dark:text-white text-base sm:text-lg font-bold mb-3 sm:mb-4 px-1">
            Métricas Principales
        </h3>

        <!-- Mobile: Scroll horizontal | Tablet+: Grid -->
        <div class="flex gap-3 sm:gap-4 overflow-x-auto sm:overflow-visible lg:grid lg:grid-cols-3 xl:grid-cols-3 no-scrollbar pb-2 sm:pb-0">
            @foreach (var kpi in kpiMetrics)
            {
                <div class="flex min-w-[160px] sm:min-w-0 flex-1 flex-col gap-1 sm:gap-2 rounded-xl p-3 sm:p-4 lg:p-5 bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 shadow-sm border border-slate-100 dark:border-slate-800 hover:shadow-md transition-all">
                    <div class="flex justify-between items-start">
                        <p class="text-slate-500 dark:text-slate-400 text-[10px] sm:text-xs font-semibold uppercase tracking-wider">
                            @kpi.Title
                        </p>
                        <span class="material-symbols-outlined @kpi.IconColor text-base sm:text-lg lg:text-xl">
                            @kpi.Icon
                        </span>
                    </div>
                    <p class="text-slate-900 dark:text-white text-xl sm:text-2xl lg:text-3xl font-extrabold">
                        @kpi.Value
                    </p>
                    <p class="@kpi.ChangeColor text-[10px] sm:text-xs font-bold @kpi.ChangeBgColor w-fit px-2 py-0.5 rounded-full">
                        @kpi.ChangeText
                    </p>
                </div>
            }
        </div>
    </section>

    <!-- Layout de 2 columnas para Tablet y Desktop -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 sm:gap-8">

        <!-- Columna Principal (Gráfico + Acciones + Pedidos) -->
        <div class="lg:col-span-2 space-y-6 sm:space-y-8">

            <!-- Trends Chart -->
            <section class="bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 rounded-xl p-4 sm:p-5 lg:p-6 shadow-sm border border-slate-100 dark:border-slate-800">
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3 sm:gap-0 mb-4 sm:mb-6">
                    <div>
                        <h3 class="text-slate-900 dark:text-white text-base sm:text-lg lg:text-xl font-bold">
                            Tendencias
                        </h3>
                        <p class="text-slate-500 dark:text-slate-400 text-xs sm:text-sm">
                            Evolución de ventas
                        </p>
                    </div>
                    <div class="flex bg-slate-100 dark:bg-slate-800 p-1 rounded-lg w-fit">
                        <button class="@GetPeriodButtonClass("week")" @onclick='() => ChangePeriod("week")'>
                            SEM
                        </button>
                        <button class="@GetPeriodButtonClass("month")" @onclick='() => ChangePeriod("month")'>
                            MES
                        </button>
                    </div>
                </div>

                <!-- Chart SVG - Responsivo -->
                <div class="w-full h-32 sm:h-40 lg:h-48">
                    <svg fill="none" height="100%" preserveAspectRatio="none" viewBox="0 0 478 150" width="100%" xmlns="http://www.w3.org/2000/svg">
                        <defs>
                            <linearGradient gradientUnits="userSpaceOnUse" id="chartGradient" x1="239" x2="239" y1="0" y2="150">
                                <stop stop-color="#137fec" stop-opacity="0.3"></stop>
                                <stop offset="1" stop-color="#137fec" stop-opacity="0"></stop>
                            </linearGradient>
                        </defs>
                        <path d="M0 120C40 110 80 40 120 40C160 40 200 90 240 85C280 80 320 20 360 25C400 30 440 70 478 60V150H0V120Z"
                              fill="url(#chartGradient)"></path>
                        <path d="M0 120C40 110 80 40 120 40C160 40 200 90 240 85C280 80 320 20 360 25C400 30 440 70 478 60"
                              stroke="#137fec" stroke-linecap="round" stroke-width="3"></path>
                    </svg>
                </div>

                <div class="flex justify-between mt-3 sm:mt-4">
                    @foreach (var day in chartDays)
                    {
                        <p class="@(day == "HOY" ? "text-primary font-extrabold" : "text-slate-400") text-[9px] sm:text-[11px] font-bold">
                            @day
                        </p>
                    }
                </div>
            </section>

            <!-- Quick Actions - Grid Responsivo -->
            <section class="space-y-3 sm:space-y-4">
                <h3 class="text-slate-900 dark:text-white text-base sm:text-lg lg:text-xl font-bold px-1">
                    Acciones Rápidas
                </h3>
                <div class="grid grid-cols-3 sm:grid-cols-3 lg:grid-cols-3 gap-2 sm:gap-3 lg:gap-4">
                    <button class="flex flex-col items-center justify-center gap-1.5 sm:gap-2 p-3 sm:p-4 lg:p-5 rounded-xl bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 text-white shadow-lg shadow-primary/20 active:scale-95 hover:shadow-xl transition-all min-h-[90px] sm:min-h-[100px] lg:min-h-[120px]"
                            @onclick="GoToOrders">
                        <span class="material-symbols-outlined text-2xl sm:text-3xl lg:text-4xl">shopping_cart</span>
                        <span class="text-[9px] sm:text-[10px] lg:text-xs font-bold uppercase tracking-tight text-center">
                            Ver Pedidos
                        </span>
                    </button>
                    <button class="flex flex-col items-center justify-center gap-1.5 sm:gap-2 p-3 sm:p-4 lg:p-5 rounded-xl bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 dark:bg-[#1e2a35] text-slate-700 dark:text-white border border-slate-100 dark:border-slate-800 active:scale-95 hover:shadow-md transition-all min-h-[90px] sm:min-h-[100px] lg:min-h-[120px]"
                            @onclick="GoToInventory">
                        <span class="material-symbols-outlined text-primary text-2xl sm:text-3xl lg:text-4xl">inventory_2</span>
                        <span class="text-[9px] sm:text-[10px] lg:text-xs font-bold uppercase tracking-tight text-center">
                            Inventario
                        </span>
                    </button>
                    <button class="flex flex-col items-center justify-center gap-1.5 sm:gap-2 p-3 sm:p-4 lg:p-5 rounded-xl bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 dark:bg-[#1e2a35] text-slate-700 dark:text-white border border-slate-100 dark:border-slate-800 active:scale-95 hover:shadow-md transition-all min-h-[90px] sm:min-h-[100px] lg:min-h-[120px]"
                            @onclick="GoToReports">
                        <span class="material-symbols-outlined text-primary text-2xl sm:text-3xl lg:text-4xl">analytics</span>
                        <span class="text-[9px] sm:text-[10px] lg:text-xs font-bold uppercase tracking-tight text-center">
                            Reportes
                        </span>
                    </button>
                </div>
            </section>

            <!-- Recent Orders - Solo visible en pantallas grandes o mostrar menos items en móvil -->
            <section class="space-y-3 sm:space-y-4">
                <div class="flex justify-between items-center px-1">
                    <h3 class="text-slate-900 dark:text-white text-base sm:text-lg lg:text-xl font-bold">
                        Pedidos Recientes
                    </h3>
                    <button class="text-primary text-xs sm:text-sm font-bold hover:underline" @onclick="ViewAllOrders">
                        Ver todos
                    </button>
                </div>

                <div class="space-y-2 sm:space-y-3">
                    @foreach (var order in recentOrders)
                    {
                        <div class="flex items-center justify-between p-3 sm:p-4 lg:p-5 bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 dark:bg-[#1e2a35] rounded-xl border border-slate-100 dark:border-slate-800 hover:shadow-md transition-shadow cursor-pointer"
                             @onclick="() => ViewOrderDetail(order.Id)">
                            <div class="flex items-center gap-2 sm:gap-3 min-w-0 flex-1">
                                <div class="size-9 sm:size-10 lg:size-12 rounded-lg bg-slate-100 dark:bg-slate-800 flex items-center justify-center flex-shrink-0">
                                    <span class="material-symbols-outlined text-slate-500 text-lg sm:text-xl lg:text-2xl">
                                        @order.Icon
                                    </span>
                                </div>
                                <div class="min-w-0 flex-1">
                                    <p class="text-slate-900 dark:text-white text-xs sm:text-sm lg:text-base font-bold truncate">
                                        @order.OrderNumber
                                    </p>
                                    <p class="text-slate-500 dark:text-slate-400 text-[10px] sm:text-xs truncate">
                                        @order.CustomerName • @order.TimeAgo
                                    </p>
                                </div>
                            </div>
                            <div class="flex flex-col items-end gap-1 flex-shrink-0 ml-2">
                                <p class="text-slate-900 dark:text-white text-xs sm:text-sm lg:text-base font-extrabold whitespace-nowrap">
                                    @order.Total.ToString("C")
                                </p>
                                <span class="@GetStatusBadgeClass(order.Status)">
                                    @order.Status
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </section>

        </div>

        <!-- Columna Lateral (Estadísticas adicionales) - Solo visible en Desktop -->
        <div class="hidden lg:block space-y-6">

            <!-- Widget de Estadísticas -->
            <section class="bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 rounded-xl p-5 shadow-sm border border-slate-100 dark:border-slate-800">
                <h3 class="text-slate-900 dark:text-white text-lg font-bold mb-4">
                    Resumen del Día
                </h3>
                <div class="space-y-4">
                    <div class="flex justify-between items-center pb-3 border-b border-slate-100 dark:border-slate-700">
                        <span class="text-slate-600 dark:text-slate-400 text-sm">Productos vendidos</span>
                        <span class="text-slate-900 dark:text-white font-bold text-lg">142</span>
                    </div>
                    <div class="flex justify-between items-center pb-3 border-b border-slate-100 dark:border-slate-700">
                        <span class="text-slate-600 dark:text-slate-400 text-sm">Clientes nuevos</span>
                        <span class="text-slate-900 dark:text-white font-bold text-lg">28</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="text-slate-600 dark:text-slate-400 text-sm">Stock bajo</span>
                        <span class="text-orange-500 font-bold text-lg">5</span>
                    </div>
                </div>
            </section>

            <!-- Widget de Actividad -->
            <section class="bg-gradient-to-br from-primary/10 to-primary/5 dark:from-primary/20 dark:to-primary/10 rounded-xl p-5 shadow-sm border border-slate-100 dark:border-slate-800">
                <h3 class="text-slate-900 dark:text-white text-lg font-bold mb-4">
                    Actividad Reciente
                </h3>
                <div class="space-y-3">
                    <div class="flex gap-3">
                        <div class="w-2 h-2 rounded-full bg-primary mt-2 flex-shrink-0"></div>
                        <div>
                            <p class="text-slate-900 dark:text-white text-sm font-semibold">Nuevo pedido</p>
                            <p class="text-slate-500 dark:text-slate-400 text-xs">Hace 5 minutos</p>
                        </div>
                    </div>
                    <div class="flex gap-3">
                        <div class="w-2 h-2 rounded-full bg-green-500 mt-2 flex-shrink-0"></div>
                        <div>
                            <p class="text-slate-900 dark:text-white text-sm font-semibold">Pago recibido</p>
                            <p class="text-slate-500 dark:text-slate-400 text-xs">Hace 12 minutos</p>
                        </div>
                    </div>
                    <div class="flex gap-3">
                        <div class="w-2 h-2 rounded-full bg-orange-500 mt-2 flex-shrink-0"></div>
                        <div>
                            <p class="text-slate-900 dark:text-white text-sm font-semibold">Stock actualizado</p>
                            <p class="text-slate-500 dark:text-slate-400 text-xs">Hace 1 hora</p>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>

</main>